{
  "name": "ribachenko.com-svelte",
  "version": "0.0.1",
  "scripts": {
    "get:map": "node --experimental-specifier-resolution=node --loader ts-node/esm src/build/map.ts",
    "get:pdf": "node --experimental-specifier-resolution=node --loader ts-node/esm src/build/pdf.ts",
    "build-config": "rm -f config.ts && buildconfig --input config.json --output src/config.ts --env $CONFIG_ENV --module-type typescript",
    "build-config:local": "CONFIG_ENV=local npm run build-config",
    "build-config:prod": "CONFIG_ENV=prod npm run build-config",
    "start": "source ~/.nvm/nvm.sh && nvm use 16 && npm run build-config:local && npm run dev",
    "dev": "vite dev --port 4000",
    "build": "npm run build-config:prod && npm run get:map && vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check ./src && eslint . && stylelint 'src/**/*.{css,scss,svelte}'",
    "format": "prettier --write ./src"
  },
  "devDependencies": {
    "@poppanator/sveltekit-svg": "^4.2.1",
    "@sveltejs/adapter-node": "^5.0.1",
    "@sveltejs/kit": "^2.5.10",
    "@types/lodash-es": "^4.17.12",
    "@types/marked": "^5.0.2",
    "@types/prismjs": "^1.26.4",
    "@types/sharp": "^0.31.1",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "autoprefixer": "^10.4.19",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-svelte": "^2.39.2",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.38",
    "postcss-custom-media": "^10.0.6",
    "postcss-html": "^1.7.0",
    "postcss-load-config": "^5.1.0",
    "prettier": "^3.3.1",
    "prettier-plugin-svelte": "^3.2.4",
    "puppeteer": "^22.10.0",
    "sharp": "^0.33.4",
    "stylelint": "^16.6.1",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-scss": "^6.3.1",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.0",
    "svelte-eslint-parser": "^0.36.0",
    "svelte-preprocess": "^5.1.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.13"
  },
  "type": "module",
  "dependencies": {
    "@floating-ui/dom": "^1.6.5",
    "classnames": "^2.5.1",
    "cookie": "^0.6.0",
    "dayjs": "^1.11.11",
    "front-matter": "^4.0.2",
    "lodash-es": "^4.17.21",
    "marked": "^12.0.2",
    "node-html-parser": "^6.1.13",
    "prismjs": "^1.29.0",
    "sass": "^1.77.4",
    "single-config": "^2.0.1",
    "xss": "^1.0.15"
  }
}
