{
	"name": "ribachenko.com-svelte",
	"version": "0.0.1",
	"scripts": {
		"get:map": "node --experimental-specifier-resolution=node --loader ts-node/esm src/build/map.ts",
		"get:pdf": "node --experimental-specifier-resolution=node --loader ts-node/esm src/build/pdf.ts",
		"build-config": "rm -f config.ts && buildconfig --input config.json --output src/config.ts --env $CONFIG_ENV --module-type typescript",
		"build-config:local": "CONFIG_ENV=local npm run build-config",
		"build-config:prod": "CONFIG_ENV=prod npm run build-config",
		"start": "source ~/.nvm/nvm.sh && nvm use 16 && npm run build-config:local && npm run dev -- --port 4000",
		"dev": "vite dev",
		"build": "npm run build-config:prod && npm run get:map && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. ./src && eslint . && stylelint 'src/**/*.{css,scss,svelte}'",
		"format": "prettier --write --plugin-search-dir=. ./src"
	},
	"devDependencies": {
		"@poppanator/sveltekit-svg": "^2.0.2",
		"@sveltejs/adapter-node": "^1.1.0",
		"@sveltejs/kit": "^1.0.10",
		"@types/lodash-es": "^4.17.6",
		"@types/marked": "^4.0.8",
		"@types/prismjs": "^1.26.0",
		"@types/sharp": "^0.31.1",
		"@typescript-eslint/eslint-plugin": "^5.48.1",
		"@typescript-eslint/parser": "^5.48.1",
		"autoprefixer": "^10.4.13",
		"dotenv": "^16.0.3",
		"eslint": "^8.31.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-svelte3": "^4.0.0",
		"node-fetch": "^3.3.0",
		"postcss": "^8.4.21",
		"postcss-custom-media": "^9.0.1",
		"postcss-html": "^1.5.0",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.2",
		"prettier-plugin-svelte": "^2.9.0",
		"puppeteer": "^19.5.0",
		"sharp": "^0.31.3",
		"stylelint": "^14.16.1",
		"stylelint-config-recommended-scss": "^8.0.0",
		"stylelint-config-standard": "^29.0.0",
		"stylelint-scss": "^4.3.0",
		"svelte": "^3.55.0",
		"svelte-check": "^3.0.2",
		"svelte-preprocess": "^5.0.0",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.4"
	},
	"type": "module",
	"dependencies": {
		"classnames": "^2.3.2",
		"cookie": "^0.5.0",
		"dayjs": "^1.11.7",
		"front-matter": "^4.0.2",
		"lodash-es": "^4.17.21",
		"marked": "^4.2.5",
		"prismjs": "^1.29.0",
		"sass": "^1.57.1",
		"single-config": "^2.0.1",
		"xss": "^1.0.14"
	}
}
