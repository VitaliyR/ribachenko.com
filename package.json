{
	"name": "ribachenko.com-svelte",
	"version": "0.0.1",
	"scripts": {
		"get:map": "node --experimental-specifier-resolution=node --loader ts-node/esm src/build/map.ts",
		"get:pdf": "node --experimental-specifier-resolution=node --loader ts-node/esm src/build/pdf.ts",
		"build-config": "rm -f config.ts && buildconfig --input config.json --output src/config.ts --env $CONFIG_ENV --module-type typescript",
		"build-config:local": "CONFIG_ENV=local npm run build-config",
		"build-config:prod": "CONFIG_ENV=prod npm run build-config",
		"start": "source ~/.nvm/nvm.sh && nvm use 16 && npm run build-config:local && npm run dev",
		"dev": "vite dev --port 4000",
		"build": "npm run build-config:prod && npm run get:map && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check ./src && eslint . && stylelint 'src/**/*.{css,scss,svelte}'",
		"format": "prettier --write ./src"
	},
	"devDependencies": {
		"@poppanator/sveltekit-svg": "^4.2.0",
		"@sveltejs/adapter-node": "^2.0.2",
		"@sveltejs/kit": "^2.0.6",
		"@types/lodash-es": "^4.17.12",
		"@types/marked": "^5.0.2",
		"@types/prismjs": "^1.26.3",
		"@types/sharp": "^0.31.1",
		"@typescript-eslint/eslint-plugin": "^6.18.0",
		"@typescript-eslint/parser": "^6.18.0",
		"autoprefixer": "^10.4.16",
		"dotenv": "^16.3.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.2",
		"eslint-plugin-svelte": "^2.35.1",
		"node-fetch": "^3.3.2",
		"postcss": "^8.4.33",
		"postcss-custom-media": "^10.0.2",
		"postcss-html": "^1.5.0",
		"postcss-load-config": "^5.0.2",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"puppeteer": "^21.7.0",
		"sharp": "^0.33.1",
		"stylelint": "^16.1.0",
		"stylelint-config-recommended-scss": "^14.0.0",
		"stylelint-config-standard": "^36.0.0",
		"stylelint-scss": "^6.0.0",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"svelte-eslint-parser": "^0.33.1",
		"svelte-preprocess": "^5.1.3",
		"ts-node": "^10.9.2",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.11"
	},
	"type": "module",
	"dependencies": {
		"@floating-ui/dom": "^1.5.4",
		"classnames": "^2.5.1",
		"cookie": "^0.6.0",
		"dayjs": "^1.11.10",
		"front-matter": "^4.0.2",
		"lodash-es": "^4.17.21",
		"marked": "^11.1.1",
		"node-html-parser": "^6.1.12",
		"prismjs": "^1.29.0",
		"sass": "^1.69.7",
		"single-config": "^2.0.1",
		"xss": "^1.0.14"
	}
}
