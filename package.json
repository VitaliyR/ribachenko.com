{
	"name": "ribachenko.com-svelte",
	"version": "0.0.1",
	"scripts": {
		"get:map": "node --experimental-specifier-resolution=node --loader ts-node/esm src/build/map.ts",
		"get:pdf": "node --experimental-specifier-resolution=node --loader ts-node/esm src/build/pdf.ts",
		"build-config": "rm -f config.ts && buildconfig --input config.json --output src/config.ts --env $CONFIG_ENV --module-type typescript",
		"build-config:local": "CONFIG_ENV=local npm run build-config",
		"build-config:prod": "CONFIG_ENV=prod npm run build-config",
		"start": "source ~/.nvm/nvm.sh && nvm use 16 && npm run build-config:local && npm run dev",
		"dev": "vite dev --port 4000",
		"build": "npm run build-config:prod && npm run get:map && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check ./src && eslint . && stylelint 'src/**/*.{css,scss,svelte}'",
		"format": "prettier --write ./src"
	},
	"devDependencies": {
		"@poppanator/sveltekit-svg": "^4.1.0",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.22.4",
		"@types/lodash-es": "^4.17.6",
		"@types/marked": "^4.0.8",
		"@types/prismjs": "^1.26.0",
		"@types/sharp": "^0.31.1",
		"@typescript-eslint/eslint-plugin": "^6.3.0",
		"@typescript-eslint/parser": "^6.3.0",
		"autoprefixer": "^10.4.13",
		"dotenv": "^16.0.3",
		"eslint": "^8.46.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-svelte": "^2.32.4",
		"node-fetch": "^3.3.0",
		"postcss": "^8.4.21",
		"postcss-custom-media": "^9.1.2",
		"postcss-html": "^1.5.0",
		"postcss-load-config": "^4.0.1",
		"prettier": "^3.0.1",
		"prettier-plugin-svelte": "^3.0.3",
		"puppeteer": "^19.7.3",
		"sharp": "^0.31.3",
		"stylelint": "^15.9.0",
		"stylelint-config-recommended-scss": "^12.0.0",
		"stylelint-config-standard": "^33.0.0",
		"stylelint-scss": "^5.0.1",
		"svelte": "^4.1.2",
		"svelte-check": "^3.4.6",
		"svelte-eslint-parser": "^0.32.2",
		"svelte-preprocess": "^5.0.4",
		"ts-node": "^10.9.1",
		"tslib": "^2.5.3",
		"typescript": "^5.1.3",
		"vite": "^4.4.9"
	},
	"type": "module",
	"dependencies": {
		"@floating-ui/dom": "^1.5.1",
		"classnames": "^2.3.2",
		"cookie": "^0.5.0",
		"dayjs": "^1.11.7",
		"front-matter": "^4.0.2",
		"lodash-es": "^4.17.21",
		"marked": "^4.2.12",
		"node-html-parser": "^6.1.4",
		"prismjs": "^1.29.0",
		"sass": "^1.58.3",
		"single-config": "^2.0.1",
		"xss": "^1.0.14"
	}
}
